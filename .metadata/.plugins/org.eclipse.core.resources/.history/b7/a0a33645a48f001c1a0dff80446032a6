package Oops;
import java.util.Scanner;
public class Patterns {

	public static void main(String[] args) {
		//Scanner scan = new Scanner(System.in);
		int row = 4;
		int col = 4;
		
		for(int i = 0; i < row; i++) {
			for(int j = 0; j< col-i; j++) {
				System.out.print("*");
		
			}
			
//			for(int k = 1; k< col; k++) {
//				System.out.print("*");
//		
//			}
			System.out.println();
		}
		

	}

}
