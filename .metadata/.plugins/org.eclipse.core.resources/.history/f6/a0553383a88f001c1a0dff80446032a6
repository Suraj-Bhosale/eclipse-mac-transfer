package Oops;
import java.util.Scanner;
public class Patterns {

	public static void main(String[] args) {
		//Scanner scan = new Scanner(System.in);
		int row = 4;
		int col = 4;
		
		for(int i = 0; i < row; i++) {
			for(int j = 1; j< col-i; j++) {
				System.out.print(" ");
		
			}
			
			for(int k =  (col - 1)-i; k< col; k++) {
				System.out.print(k);
		
			}
			System.out.println();
		}
		

	}

}
